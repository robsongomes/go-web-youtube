{{define "title"}}
Posts
{{ end }}

{{define "content"}}
<h1>Edit Post</h1>
<div class="container col-5">
  <form id="form" action="/post/edit" method="post" class="m-5">
    <input type="hidden" name="id" value="{{.Post.Id}}" />
    {{if .Errors}}
    <div id="errors" class="alert alert-danger">
      <ul>
        {{
          range.Errors
        }}
        <li>{{.}}</li>
        {{
          end
        }}
      </ul>
    </div>
    {{ end }}
    <div class="mb-3 row">
      <label for="title" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input
          type="text"
          id="title"
          name="title"
          class="form-control"
          value="{{.Post.Title}}"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="content" class="col-sm-2 col-form-label">content</label>
      <div class="col-sm-10">
        <textarea
          type="content"
          id="content"
          name="content"
          class="form-control"
          >{{.Post.Content}}
        </textarea>
      </div>
    </div>
    <div class="row col-3 offset-2">
      <button id="button" type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>
{{ end }}
